# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=Daiki87.google
DB_NAME=llantera
DB_SSLMODE=disable

# Usar el mismo valor que está como default en config.go, o el que tú quieras
DATABASE_URL=postgres://postgres:Daiki87.google@127.0.0.1:5432/llantera?sslmode=disable

# JWT / Auth Configuration
# El código usa AUTH_SECRET, no JWT_SECRET
AUTH_SECRET=LlanteraServer
JWT_SECRET=LlanteraServer   # opcional, solo si otro servicio lo usa

# Server Configuration
HTTP_HOST=0.0.0.0
HTTP_PORT=8181
SERVER_SHUTDOWN_TIMEOUT=15s

# Database pool configuration
DB_MAX_OPEN_CONNS=10
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=1h

# Token TTL (6 días como el default)
AUTH_TOKEN_TTL=144h

# Admin Configuration (si tu app las usa en otro lado)
ADMIN_EMAIL=admin@llanteradeoccidente.com
ADMIN_PASSWORD=Password123

# Framework / otros (si tu stack lo necesita)
GIN_MODE=release

# CORS para desarrollo (por ejemplo Angular en localhost)
CORS_ALLOWED_ORIGINS=http://localhost:4200,http://127.0.0.1:4200,http://localhost:4201,http://127.0.0.1:4201,